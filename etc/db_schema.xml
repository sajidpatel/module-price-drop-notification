<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sajidpatel_price_drop_notification" resource="default" engine="innodb" comment="Price Drop Notification Table">
        <column xsi:type="int" name="notification_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Notification ID"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" comment="Product ID"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="varchar" name="email" nullable="false" length="255" comment="Customer Email"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="notification_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="SAJIDPATEL_PRICE_DROP_NOTIF_PRD_ID_CAT_PRD_ENTT_ENTT_ID"
                    table="sajidpatel_price_drop_notification" column="product_id"
                    referenceTable="catalog_product_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="SAJIDPATEL_PRICE_DROP_NOTIF_CSTR_ID_CSTR_ENTT_ENTT_ID"
                    table="sajidpatel_price_drop_notification" column="customer_id"
                    referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="SAJIDPATEL_PRICE_DROP_NOTIFICATION_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
        <index referenceId="SAJIDPATEL_PRICE_DROP_NOTIFICATION_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
    </table>

    <table name="customer_entity">
        <column
            xsi:type="boolean"
            name="price_drop_notification_opt_out"
            nullable="false"
            default="false"
            comment="Price Drop Notification Opt-out"/>
    </table>
</schema>